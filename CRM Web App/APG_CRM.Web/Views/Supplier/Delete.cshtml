@model APG_CRM.Data.Entities.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="custom-card-background">
    <div class="d-flex justify-content-center">
        <div class="custom-card-inner">
            <!-- Display BreadCrumbs -->
               <partial name="_BreadCrumbs" model=@(new [] { ("/", "Home"), ("/Supplier", "Suppliers"), 
            ($"/supplier/details/{Model.Id}", $"Supplier Title: {Model.Name}"), ("", "Delete Supplier") }) />

            <h1 class="page-header">@ViewData["Title"]</h1>

             <!-- Highlighting criticality -->
            <div class="alert alert-danger" role="alert">
                <strong>Warning!</strong> Are you sure you want to delete this Supplier? 

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">Basic Information</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="DateAdded">Date Added:</label>
                                    <input asp-for="DateAdded" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name">Supplier Name:</label>
                                    <input asp-for="Name" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="MainContactName">Main Contact:</label>
                                    <input asp-for="MainContactName" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">Contact Information</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Address">Address:</label>
                                    <input asp-for="Address" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="City">City:</label>
                                    <input asp-for="City" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="PostCode">Post Code:</label>
                                    <input asp-for="PostCode" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Additional Information -->
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">Additional Information</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Website">Website:</label>
                                    <input asp-for="Website" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone">Phone:</label>
                                    <input asp-for="Phone" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email:</label>
                                    <input asp-for="Email" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Notes">Notes:</label>
                                    <textarea asp-for="Notes" class="form-control" readonly></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>

            <!-- Navigation area at the bottom of the page -->
            <div class="navigation-area mt-5">
                <a asp-controller="Supplier" asp-action="Index" class="btn btn-light">Back to Supplier List</a>
                <!-- Add more navigation links as required -->
            </div>
        </div>
    </div>
</div>
