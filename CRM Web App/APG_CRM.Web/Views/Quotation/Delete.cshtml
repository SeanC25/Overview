@model APG_CRM.Web.Models.QuotationViewModel

<div class="custom-card-background">

    <div class="custom-card-inner">
        <!-- Display BreadCrumbs for Delete Quotation -->
        <partial name="_BreadCrumbs" model=@(new [] { ("/", "Home"), ("/Quotation", "Quotations"),
            ($"/quotation/details/{Model.Id}", $"Quotation Title: {Model.Title}"), ("", "Delete Quotation") }) />


        <div class="card rounded shadow p-4 red-border">
            <h1 class="page-header">Delete Quotation </h1>

            <!-- Highlighting criticality -->
            <div class="alert alert-danger" role="alert">
                <strong>Warning!</strong> Are you sure you want to delete this Quotation? 
            </div>

            <!-- Display details about the Quotation -->
            <dl class="row">
                <dt class="col-4 pb-1">Quotation ID</dt>
                <dd class="col-8 pb-1">@Model.Id</dd>

                <dt class="col-4 pb-1">Quotation Date</dt>
                <dd class="col-8 pb-1">@Model.Date.ToString("dd/MM/yyyy")</dd>

                <dt class="col-4 pb-1">Title</dt>
                <dd class="col-8 pb-1">@Model.Title</dd>

                <dt class="col-4 pb-1">Contact Name</dt>
                <dd class="col-8 pb-1">@Model.ContactName</dd>

                <dt class="col-4 pb-1">Contact Phone</dt>
                <dd class="col-8 pb-1">@Model.ContactPhone</dd>

                <dt class="col-4 pb-1">Contact Email</dt>
                <dd class="col-8 pb-1">@Model.ContactEmail</dd>

                <dt class="col-4 pb-1">Work Type</dt>
                <dd class="col-8 pb-1">@Model.WorkType</dd>

                <dt class="col-4 pb-1">Urgency</dt>
                <dd class="col-8 pb-1">@Model.Urgency</dd>

                <dt class="col-4 pb-1">Price</dt>
                <dd class="col-8 pb-1">@Model.Price.ToString("C")</dd>

                <dt class="col-4 pb-1">Quote Sent Date</dt>
                <dd class="col-8 pb-1">@Model.QuoteSentDate?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-4 pb-1">Quote Follow Up Date</dt>
                <dd class="col-8 pb-1">@Model.QuoteFollowDate?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-4 pb-1">Status</dt>
                <dd class="col-8 pb-1">@Model.Status</dd>

                <dt class="col-4 pb-1">Response</dt>
                <dd class="col-8 pb-1">@Model.Response</dd>
            </dl>



            <div class="mt-4">
                <h3 class="mb-4">Delete Quotation<span class="ms-3 text-danger fs-5">Are you sure?</span></h3>
                <form asp-action="DeleteConfirm" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" aria-label="delete">Delete</button>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                </form>

                <!-- Navigation link back to all quotations -->
                <a asp-action="Index" class="btn btn-sm btn-outline-primary" aria-label="quotation list">
                    <i class="bi bi-list" title="Quotation list"></i>
                    <span class="ms-1 d-none d-md-inline">All Quotations</span>
                </a>
            </div>
        </div>
    </div>
</div>
