<script>

    // If you want to automatically show the modal when the page loads
    $(document).ready(function () {
        $('#surveySearchModal').on('show.bs.modal', function (e) {
            // Assuming you have an action method named `SurveySearch` that returns the `_SurveySearch.cshtml` view
            $(this).find('.modal-body').load('/Survey/SurveySearch');
        });
    });

</script>
