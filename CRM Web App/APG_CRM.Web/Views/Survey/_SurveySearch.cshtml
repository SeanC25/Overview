<!-- Survey Search Modal -->
<div class="modal fade" id="surveySearchModal" tabindex="-1" aria-labelledby="surveySearchModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="surveySearchModalLabel">Search Surveys</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Here, we'll load the content of _SurveySearch.cshtml dynamically -->
            </div>
        </div>
